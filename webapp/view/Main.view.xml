<mvc:View controllerName="brasileirao.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <ObjectHeader 
            id="objectheader"
            title="{ModeloDadosGerais>/nomeCampeonato}"
            number="{ModeloDadosGerais>/rodada}"
            numberUnit="rodada"
            > 

            </ObjectHeader>

                 <IconTabBar id="icontabbar">
                    <items>
                        <IconTabFilter id="objectfilter" text="Classificação" icon="sap-icon://competitor">
                            <Table id="tableclassificacao"
                            items="{ModeloTabela>/Classificacao}"
                            >

                                <columns>
                                    <Column> 
                                        <Text text="Posição"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text text="Escudo"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text  text="Time"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text  text="Pontos"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text text="Jogos"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text  text="Vitórias"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text text="Empates"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text text="Derrotas"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text text="GM"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text text="GC"></Text>
                                    
                                    </Column>

                                      <Column> 
                                        <Text text="SG"></Text>
                                    
                                    </Column>

                                </columns>
                            
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Text text="{ModeloTabela>posicao}"></Text>
                                                <Image width="80%" 
                                                src="{ModeloTabela>time/escudo}">
                                                </Image>
                                                <Text text="{ModeloTabela>posicao>time/nome_popular}"></Text>
                                                <Text text="{ModeloTabela>pontos}"></Text>
                                                <Text text="{ModeloTabela>jogos}"></Text>
                                                <Text text="{ModeloTabela>vitorias}"></Text>
                                                <Text text="{ModeloTabela>vitorias}"></Text>
                                                <Text text="5"></Text>
                                                <Text text="39"></Text>
                                                <Text text="15"></Text>
                                                <Text text="24"></Text>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                            </Table>
                        </IconTabFilter>
            
                        <IconTabFilter id="idPartidas" text="Partidas" icon="sap-icon://soccer">
                         <core:Fragment fragmentName="brasileirao.view.partidas" type="XML" />

                        </IconTabFilter>
                    </items>
                </IconTabBar>

         </content>
    </Page>
</mvc:View>
